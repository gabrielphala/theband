<header class="base flex flex--a-center flex--j-space-between">
    <div class="base__left flex flex--a-center">
        <div class="base__left__logo flex flex--a-center">
            <a href="/" class="base__left__logo__circle">
                <img class="pos--center" src="/assets/illustrations/earbud.svg" alt="">
            </a>
            <div>
                <h1>the<span>Band</span></h1>
                <p>For music lovers</p>
            </div>
        </div>
        <div class="base__left__sep"></div>
        <nav class="base__left__main-nav flex flex--a-center">
            <p><a href="/">Home</a></p>
            <p><a href="/events">Events</a></p>
            <svg class="image--icon">
                <use href="#search"></use>
            </svg>
        </nav>
        
    </div>
    <div class="base__right" style="justify-self: right;">
        <ul class="flex">
            <% if (locals.artistInfo) { %>
                <li><a href="/artist/discography"><%= artistInfo.stage_name %></a></li>
                <li style="margin-left: 1rem;"><a href="/sign-out">Sign out</a></li>
            <% } else if (locals.organizerInfo) {%>
                <li><a href="/organizer/events"><%= organizerInfo.firstname + " " + organizerInfo.lastname %></a></li>
                <li style="margin-left: 1rem;"><a href="/sign-out">Sign out</a></li>
            <% } else if (locals.supporterInfo) {%>
                <li><%= supporterInfo.firstname + " " + supporterInfo.lastname %></li>
                <li style="margin-left: 1rem;"><a href="/sign-out">Sign out</a></li>
            <% } else { %>
                <li><a href="/sign-in">Sign in</a></li>
                <li style="margin-left: 1rem;"><a href="/sign-in">Sign up</a></li>
            <% } %>
        </ul>
    </div>
</header>