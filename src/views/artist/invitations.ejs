<%- include('../partials/header/artist') %>

<div class="container">
    <%- include('../partials/sidenav/artist') %>

    <div class="container__main">
        <div class="container__main__title">
            <h1 class="flex flex--a-center">
                <svg style="width: 3rem; height: 3rem;">
                    <use href="#calendar"></use>
                </svg>
                <span>My invitations</span>
            </h1>
            <p>Life of a party</p>
        </div>
        <div class="container__main__center">
            <div class="card">
                <div class="card__header card__header--no-border">
                    <h1 style="font-size: 1.6rem;">You're invited</h1>
                    <p>Life of a party</p>
                </div>
                <div class="events-container__list" id="event-list">
                </div>
                <div class="card__body empty flex--a-center flex--j-center" id="no-events" style="display: none;">
                    <img src="/assets/illustrations/no-data.svg" alt="No data">
                    <div class="empty_caption">
                        <h1>No invitations</h1>
                        <p>When you are invited, your invitations will appear here.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

